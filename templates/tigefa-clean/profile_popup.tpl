<table width="100%">
    <tr>
        <td width="100" style="padding:4px;">Full name:</td>
        <td>{fullname}&nbsp;</td>
        <td rowspan="6" valign="top" align="right"><img src="{foto}" border="0" /></td>
    </tr>
    <tr>
        <td style="padding:4px;">Group:</td>
        <td>{status}</td>
    </tr>
    <tr>
        <td style="padding:4px;">Last visit:</td>
        <td>{lastdate}</td>
    </tr>
    <tr>
        <td style="padding:4px;">Registration date:</td>
        <td>{registration}</td>
    </tr>
    <tr>
        <td style="padding:4px;">News:</td>
        <td>{news-num} [ {news} ] [rss]<img src="{THEME}/images/rsshead.png" alt="rss" style="vertical-align: middle; margin-left: 5px;" />[/rss]</td>
    </tr>
    <tr>
        <td style="padding:4px;">Comments:</td>
        <td>{comm-num} [ {comments} ]</td>
    </tr>
</table>